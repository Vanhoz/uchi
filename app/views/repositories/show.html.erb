<%= form_for Repository.new, url: { action: "create" }, method: :post do |f| %>
  <div class="field">
    <%= f.text_field :link, class: 'rep-field' %>
  </div>
  <div class="actions"><%= f.submit "Найти" %></div>
<% end %>

<h1>Results<h1>
<% @contributors.each do |contributor| %>
  <h2><%= contributor.name %><h2>
<% end %>